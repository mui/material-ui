{
  "compilerOptions": {
    "moduleResolution": "bundler",
    "module": "preserve",
    "types": ["node"],
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strict": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true
  },
  "include": ["./src/**/*", "./test/**/*"]
}

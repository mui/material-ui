{
  "compilerOptions": {
    "lib": ["es2020", "dom"],
    "noEmit": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "types": ["node", "mocha"],
    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    // https://github.com/vitest-dev/vitest/issues/4688
    // TODO: Remove after fully migrated chai to vitest
    "skipLibCheck": true
  },
  "include": ["./src/**/*"]
}

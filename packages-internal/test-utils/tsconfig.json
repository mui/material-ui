{
  "compilerOptions": {
    "lib": ["es2020", "dom"],
    "noEmit": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "types": ["node", "vitest/globals"],
    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    // Remove when https://github.com/thomasbrodusch/vitest-fail-on-console/issues/160 is resolved
    "skipLibCheck": true
  },
  "include": ["./src/**/*"]
}

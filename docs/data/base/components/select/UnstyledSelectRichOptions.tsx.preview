<CustomSelect placeholder="Select countryâ€¦">
  {countries.map((country) => (
    <StyledOption key={country.code} value={country.code} label={country.label}>
      <img
        loading="lazy"
        width={20}
        height={14}
        srcSet={`https://flagcdn.com/w40/${country.code.toLowerCase()}.png 2x`}
